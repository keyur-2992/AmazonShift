{
    "manifest_version": 3,
    "name": "Page Refresh Extension",
    "version": "1.0",
    "description": "A Chrome extension to refresh a specific page with a custom interval.",
    "permissions": [
      "activeTab",
      "storage",
      "notifications",
      "scripting",
      "webRequest",
      "nativeMessaging"

    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  